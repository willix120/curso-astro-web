---
interface Props {
    link: string,
}

const { link } = Astro.props;
---

<a href={link} class="flex items-center cursor-pointer gap-2 rounded-lg px-3 py-[10px] transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed bg-button text-white shadow-button hover:shadow-button-hover hover:scale-110 font-medium">
    <slot name="before" />
    <slot />
    <slot name="after" />
</a>